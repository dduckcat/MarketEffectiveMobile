        <item name="colorSecondary">@null</item>
        <item name="colorSecondaryVariant">@null</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
                <item name="android:statusBarColor">@color/dark_blue</item>
